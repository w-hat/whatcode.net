{{#link-to 'post' post}}
<img class="thumb" src="{{post.image}}">
{{/link-to}}
<div class="description">
  {{#link-to 'post' post}}
  <h2>{{post.title}}</h2>
  {{/link-to}}
  <p class="time">{{post.posted}}</p>
  {{#link-to 'coder' post.author.id}}
  <p class="author">{{post.author.display}}</p>
  {{/link-to}}
</div>

